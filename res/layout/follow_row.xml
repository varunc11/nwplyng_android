<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:id="@+id/mainLayout"
    android:background="@drawable/field_back_ground"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="3dp">

   <ImageView
       android:id="@+id/listProfileImage"
       android:layout_width="48dp"
       android:layout_height="48dp"
       android:layout_alignParentLeft="true"
       android:layout_margin="5dip"
       android:layout_centerVertical="true"
       android:scaleType="centerCrop"
       android:background="@drawable/pro"
       android:contentDescription="@string/contentDescription"/>
   
   <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/listProfileImage"
       android:layout_alignTop="@+id/listProfileImage"
       android:layout_alignBottom="@+id/listProfileImage"
       android:layout_toLeftOf="@+id/FollowButton"
       android:layout_marginLeft="1dp"
       android:layout_centerVertical="true"
       android:orientation="vertical">
       
       <TextView 
        android:id="@+id/profileName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp"/>
       
       <TextView
        android:id="@+id/fullNameofUser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"/>
       
   </LinearLayout>

   <Button
        android:id="@+id/FollowButton"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:tag="@string/unfollow"
        android:background="@drawable/unfollow"
        />

</RelativeLayout>